[Unit]
Description=Revvy service
After=bluetooth.target network.target sound.target hciuart.service polkit.service
Wants=bluetooth.target network.target sound.target hciuart.service dhcpcd.service systemd-logind.service dbus.service
StartLimitIntervalSec=1

[Service]
Type=simple
Restart=always
RestartSec=1
User=pi
ExecStart=/usr/bin/env python3 /home/pi/RevvyFramework/launch_revvy.py

[Install]
WantedBy=multi-user.target
