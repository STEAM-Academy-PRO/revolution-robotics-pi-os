[Unit]
Description=Revvy service, delayed start for the RPi Zero 2 W
StartLimitIntervalSec=1
After=bluetooth.service hciuart.service
Wants=bluetooth.service hciuart.service

[Service]
Type=simple
Restart=on-failure
RestartSec=1
User=pi
ExecStart=/usr/bin/env python3 /home/pi/RevvyFramework/launch_revvy.py --service

[Install]
WantedBy=bluetooth.target
